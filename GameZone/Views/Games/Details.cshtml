@using GameZone.Settings;
@model Game
@{
    ViewData["Title"] = Model.Name;
}

<div style="height:80vh" class="card border-seccess rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0 d-flex justify-content-center align-items-center">
        <div class="row ">
            <div class="col-md-7">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                    @foreach (var Device in Model.Devices)
                    {
                        <i class="@Device.Device.Icon me-2 fs-1 text-secondary"></i>
                    }

                </div>
            </div>
            <div class="col-md-5">
                <img class="w-100 " src="@($"{FileSettings.ImagePath}/{Model.Cover}")" />
            </div>
        </div>
    </div>
</div>